                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titolo"
                    android:layout_toEndOf="@+id/img"
                    android:text="12/09/2018"
                    android:textSize="7dp" />

