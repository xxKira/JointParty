            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/Bianco"
                android:elevation="16dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/_ic_launcher" />

