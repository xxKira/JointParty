<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:onClick="metodo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Primo metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Secondo metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Terzo metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Quarto metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Quinto metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Sesto metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Settimo metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Ottavo metodo di coltivazione"
                android:textSize="25dp"
                android:textColor="@color/Bianco"
                android:backgroundTint="@color/colorPrimary"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>